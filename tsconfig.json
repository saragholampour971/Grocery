{
  "extends": "@grocery-repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/public": [
        "./public/*"
      ],
      "@/styles": [
        "./styles/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/components": [
        "./components/*"
      ]
    },
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
